@model OSS.Services.Models.LogModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <a class="btn btn-outline-warning" asp-action="Index">@T("Back")</a>
    <strong style="padding-left: 20px">@T("Log Details")</strong>
</div>
<hr />
<div class="row">
    <div class="col-md-10">
        <form id="frmDetails" name="frmDetails" method="post">
            <input type="hidden" asp-for="EncrypedId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <label class="form-control">@Model.UserId</label>
            </div>
            <div class="form-group">
                <label asp-for="PageUrl" class="control-label"></label>
                <label class="form-control" >@Model.PageUrl</label>
            </div>
            <div class="form-group">
                <label asp-for="ReferrerUrl" class="control-label"></label>
                <label class="form-control" >@Model.ReferrerUrl</label>
            </div>
            <div class="form-group">
                <label asp-for="ShortMessage" class="control-label"></label>
                <textarea class="form-control">@Model.ShortMessage</textarea>
            </div>
            <div class="form-group">
                <label asp-for="FullMessage" class="control-label"></label>
                <textarea class="form-control">@Model.FullMessage</textarea>
            </div>
            @if (Model.ModelMode == OSS.Services.ModelActions.Delete)
            {
                <div class="form-group">
                    <input type="submit" value="@T("Delete")" class="btn btn-outline-danger" asp-action="Delete" />
                </div>
            }
        </form>
    </div>
</div>
